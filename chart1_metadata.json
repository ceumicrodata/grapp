{   
  //////////////////////////
  //"chart-global" metadata
  //////////////////////////

  // the initialtime and value extents
  "dateFrom" : "2010-01-01" , //formatted based on the "dateFormat" settings
  "dateTo" : "2013-03-01" ,   //formatted based on the "dateFormat" settings
  "valueFrom" : -100,
  "valueTo" : 100,
  
  // formatting of axes
  "timeAxis" : {
    "tickCount": 8, //number of main ticks on the x axis
    "subdivide" : 0,   //number of "subticks" between main ticks
    "tickFormat": function(date) { return d3.time.format( date.getMonth() ? "%b" : "%Y")(date); }
  }, 
  "valueAxis" : {
    "tickCount": 5, //number of main ticks on the y axis
    "subdivide" : 1,   //number of "subticks" between main ticks
    "tickFormat": d3.format("g") 
  }, 
  
  // view levels
  "levels": [
  
    ///////////////////////
    //initial settings
    ///////////////////////
    {
      // chart title and desctiption
      "title" : "Industrial growth (region)",
      "description" : "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed malesuada turpis suscipit magna interdum sodales.",
      
      "dateFormat" : d3.time.format("%Y-%m-%d"), // see https://github.com/mbostock/d3/wiki/Time-Formatting

      // the ajax queries 
      "queries" : [
        {
          "url" : function(dateFrom,dateTo,grouping) { 
            return "http://htsql.coauthors.net/htsql/region?date>='"+dateFrom+"'&date<='"+dateTo+"'/:json";
           },
          "tableName" : "region", //the main json object
          "serieKey" : "region", //the ID of the serie
          "dateKey" : "date",     //value on the X axis
          "valueKey" : "growth",  //value on the Y axis
          "color" : "#aaaaaa",    //color of the line, can be a function(serieKey)
          "styleName" : "regionLine", //css style name, can be a function(serieKey)
          "onClick" : +1          //go to next level on click
        },
        {
          "url"  : function(dateFrom,dateTo,grouping) { 
            return "http://htsql.coauthors.net/htsql/growth?date>='"+dateFrom+"'&date<='"+dateTo+"'&country='hungary'/:json";
          },
          "tableName" : "growth", //the main json object
          "serieKey" : "country", //the ID of the serie
          "dateKey" : "date",     //value on the X axis
          "valueKey" : "growth",  //value on the Y axis
          "color" : "#ff0000",    //color of the line, can be a function(serieKey)
          "styleName" : "referenceCountryLine", //css style name, can be a function(serieKey)
          "onClick" : 0           //not clickable
        }
      ]
    },
    
    ///////////////////////
    //second level settings
    ///////////////////////
    {

      // chart title and desctiption
      "title" : "Industrial growth (countries of the selected region)",
      "description" : "Suspendisse non elit justo. Pellentesque eget tellus a eros vestibulum dignissim.",

      "dateFormat" : d3.time.format("%Y-%m-%d"), // see https://github.com/mbostock/d3/wiki/Time-Formatting

      // the ajax queries 
      "queries" : [
        {
          "url"  : function(dateFrom,dateTo,grouping) { 
            return "http://htsql.coauthors.net/htsql/growth?date>='"+dateFrom+"'&date<='"+dateTo+"'&region='"+grouping+"'/:json";
          },
          "tableName" : "growth", //the main json object
          "serieKey" : "country", //the ID of the serie
          "dateKey" : "date",     //value on the X axis
          "valueKey" : "growth",  //value on the Y axis
          "color" : function(serieKey) { return d3.hsl(Math.random()*360, 0.5, 0.7).toString(); }, //color of the line (null: random)
          "styleName" : "countryLine", //css style name, can be a function(serieKey)
          "onClick" : -1         //go to previous level on click
        }
      ]
    }
  ] //end of levels
}

// dateFrom: beginnig of the time interval (formatted based on the "dateFormat" settings)
// dateTo: end of the time interval (formatted based on the "dateFormat" settings)
// grouping: on an upper level, grouping is the ID of the previously clicked serie

